<idea-plugin>
    <id>org.example.lama-plugin</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Lama File" implementationClass="ru.mse.itmo.lama.language.LamaFileType"
                  fieldName="INSTANCE" language="Lama" extensions="lama"/>
        <lang.parserDefinition language="Lama"
                               implementationClass="ru.mse.itmo.lama.language.LamaParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Lama"
                                       implementationClass="ru.mse.itmo.lama.language.LamaSyntaxHighlighterFactory"/>
<!--        <psi.referenceContributor language="Lama" implementation="ru.mse.itmo.lama.language.psi.ref.LamaReferenceContributor"/>-->
        <psi.referenceContributor language="Lama" implementation="ru.mse.itmo.lama.language.psi.ref.LamaJavaReferenceContributor"/>
        <lang.findUsagesProvider language="Lama"
                                 implementationClass="ru.mse.itmo.lama.language.psi.ref.LamaFindUsagesProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>